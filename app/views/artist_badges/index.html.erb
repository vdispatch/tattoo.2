<%- model_class = ArtistBadges -%>
<div class="page-header">
  <h1><%=t '.title', :default => ArtistBadges %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:badge_image) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @artist_badges.each do |artist_badges| %>
      <tr>
        <td><%= artist_badges.id %></td>
        <td><%= artist_badges.name %></td>
        <td><%= artist_badges.description %></td>
        <td><%= artist_badges.badge_image %></td>
        <td><%=l artist_badges.created_at, format: :long %></td>
        <td>
          <%= link_to artist_badges_path(artist_badges), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to artist_badges_path(artist_badges), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_artist_badges_path,
            :class => 'btn btn-primary' %>
