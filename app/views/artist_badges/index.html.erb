<h1>Listing artist_badges</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Badge image</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artist_badges.each do |artist_badge| %>
      <tr>
        <td><%= artist_badge.name %></td>
        <td><%= artist_badge.description %></td>
        <td><%= artist_badge.badge_image %></td>
        <td><%= artist_badge.artist %></td>
        <td><%= link_to 'Show', artist_badge %></td>
        <td><%= link_to 'Edit', edit_artist_badge_path(artist_badge) %></td>
        <td><%= link_to 'Destroy', artist_badge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist badge', new_artist_badge_path %>
