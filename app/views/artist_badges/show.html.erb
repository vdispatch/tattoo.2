<%- model_class = ArtistBadges -%>
<div class="page-header">
  <h1><%=t '.title', :default => ArtistBadges %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @artist_badges.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @artist_badges.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:badge_image) %></dt>
      <dd><pre class="prettyprint"><%= @artist_badges.badge_image %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              artist_badges_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_artist_badges_path(@artist_badges), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              artist_badges_path(@artist_badges),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

