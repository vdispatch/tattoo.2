<%= form_for @studio, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :address, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :town, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :town, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :county, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :county, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :postcode, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :postcode, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :country, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :country, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :website, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :website, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.email_field :email, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :facebook, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :facebook, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :twitter, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :twitter, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :instagram, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :instagram, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :googleplus, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :googleplus, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :googlebusiness, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :googlebusiness, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  studios_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
