<%- model_class = Studio -%>
<div class="page-header">
  <h1><%=t '.title', :default => Studio %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:town) %></th>
      <th><%= model_class.human_attribute_name(:county) %></th>
      <th><%= model_class.human_attribute_name(:postcode) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:website) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:facebook) %></th>
      <th><%= model_class.human_attribute_name(:twitter) %></th>
      <th><%= model_class.human_attribute_name(:instagram) %></th>
      <th><%= model_class.human_attribute_name(:googleplus) %></th>
      <th><%= model_class.human_attribute_name(:googlebusiness) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @studios.each do |studio| %>
      <tr>
        <td><%= studio.id %></td>
        <td><%= studio.name %></td>
        <td><%= studio.address %></td>
        <td><%= studio.town %></td>
        <td><%= studio.county %></td>
        <td><%= studio.postcode %></td>
        <td><%= studio.country %></td>
        <td><%= studio.website %></td>
        <td><%= studio.email %></td>
        <td><%= studio.facebook %></td>
        <td><%= studio.twitter %></td>
        <td><%= studio.instagram %></td>
        <td><%= studio.googleplus %></td>
        <td><%= studio.googlebusiness %></td>
        <td><%=l studio.created_at, format: :long %></td>
        <td>
          <%= link_to studio_path(studio), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to studio_path(studio), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_studio_path,
            :class => 'btn btn-primary' %>
