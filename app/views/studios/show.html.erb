<%- model_class = Studio -%>
<div class="page-header">
  <h1><%=t '.title', :default => Studio %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @studio.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
      <dd><pre class="prettyprint"><%= @studio.address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:town) %></dt>
      <dd><pre class="prettyprint"><%= @studio.town %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:county) %></dt>
      <dd><pre class="prettyprint"><%= @studio.county %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:postcode) %></dt>
      <dd><pre class="prettyprint"><%= @studio.postcode %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:country) %></dt>
      <dd><pre class="prettyprint"><%= @studio.country %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:website) %></dt>
      <dd><pre class="prettyprint"><%= @studio.website %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email) %></dt>
      <dd><pre class="prettyprint"><%= @studio.email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:facebook) %></dt>
      <dd><pre class="prettyprint"><%= @studio.facebook %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:twitter) %></dt>
      <dd><pre class="prettyprint"><%= @studio.twitter %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:instagram) %></dt>
      <dd><pre class="prettyprint"><%= @studio.instagram %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:googleplus) %></dt>
      <dd><pre class="prettyprint"><%= @studio.googleplus %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:googlebusiness) %></dt>
      <dd><pre class="prettyprint"><%= @studio.googlebusiness %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              studios_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_studio_path(@studio), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              studio_path(@studio),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

