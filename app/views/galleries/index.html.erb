<h1>Listing galleries</h1>

<table>
  <thead>
    <tr>
      <th>Artist</th>
      <th>Title</th>
      <th>Complete date</th>
      <th>Description</th>
      <th>Time taken</th>
      <th>Image</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= gallery.artist %></td>
        <td><%= gallery.title %></td>
        <td><%= gallery.complete_date %></td>
        <td><%= gallery.description %></td>
        <td><%= gallery.time_taken %></td>
        <td><%= gallery.image %></td>
        <td><%= gallery.project %></td>
        <td><%= link_to 'Show', gallery %></td>
        <td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
        <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

